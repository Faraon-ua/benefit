@using Benefit.Domain.Models
@model List<Banner>

@{
    ViewBag.Title = "Головна";
    Layout = "~/Areas/Cabinet/Views/Shared/_CabinetLayout.cshtml";
}
<div class="partner_main col-lg-9 col-md-9 col-sm-9 col-xs-9">
    @{
        var first = Model.FirstOrDefault(entry => entry.Order == 0) ?? new Banner();
    }
    <a href="@first.NavigationUrl" class="banner banner_01">
        <img src="~/Images/@BannerType.PartnerPageBanners.ToString()/@first.ImageUrl" />
    </a>
    @{
        var second = Model.FirstOrDefault(entry => entry.Order == 1) ?? new Banner();
    }
    <a href="@second.NavigationUrl" class="banner banner_02">
        <img src="~/Images/@BannerType.PartnerPageBanners.ToString()/@second.ImageUrl" />
    </a>
    @{
        var third = Model.FirstOrDefault(entry => entry.Order == 2) ?? new Banner();
    }
    <a href="@third.NavigationUrl" class="banner banner_03">
        <img src="~/Images/@BannerType.PartnerPageBanners.ToString()/@third.ImageUrl" />
    </a>
    @{
        var fourth = Model.FirstOrDefault(entry => entry.Order == 3) ?? new Banner();
    }
    <a href="@fourth.NavigationUrl" class="banner banner_04">
        <img src="~/Images/@BannerType.PartnerPageBanners.ToString()/@fourth.ImageUrl" />
    </a>
</div>