@using Benefit.Common.Extensions
@using Benefit.Domain.Models
@model Order
<p class="history_modal_title">Інформація про замовлення</p>
<table class="order_ifo_table">
    <tbody>
        <tr>
            <th>Номер</th>
            <th>Дата</th>
            <th>Сума (грн)</th>
            <th>Спосіб оплати</th>
            <th>Спосіб доставки</th>
            <th>Адреса доставки</th>
            <th>Вартість доставки</th>
            <th>Коментар</th>
        </tr>
        <tr>
            <td>@Model.OrderNumber</td>
            <td>@Model.Time.ToLocalTimeWithFormat()</td>
            <td>@Model.Sum.ToString("F")</td>
            <td>@Model.PaymentType</td>
            <td>@Model.ShippingName</td>
            <td>@Model.ShippingAddress</td>
            <td>@Model.ShippingCost</td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>Статус</td>
            <td  style="text-align: left;">
                @Html.DropDownList("OrderStatus", EnumHelper.GetSelectList(typeof(OrderStatus), Model.Status))
            </td>
            <td>Коментар статусу</td>
            <td colspan="5">
                @Html.TextBox("StatusComment", Model.StatusComment, new {@class="width-100"})
            </td>
        </tr>
    </tbody>
</table>
<p>
    <a class="btn btn-primary margin-right-10  btn-sm" href="#" title="Зберегти статус" id="updateStatus">Зберегти статус</a>
</p>


<p class="history_modal_title">Товари в кошику</p>
<table class="order_in_table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Кількість</th>
            <th>Ціна</th>
            <th>Сума</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.OrderProducts)
        {
            var productOptionsSum = product.DbOrderProductOptions.Sum(entry => entry.ProductOptionPriceGrowth * entry.Amount);
            var productSum = product.ProductPrice * product.Amount;
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Amount</td>
                <td>@product.ProductPrice</td>
                <td>@((productSum + productOptionsSum).ToString("F"))</td>
                <td><a class="basket" href="@Url.Action("DeleteOrderProduct", new { orderId = Model.Id, productId = product.ProductId })" onclick="return confirm('Ви впевненні?')"></a></td>
            </tr>
            foreach (var productOption in product.DbOrderProductOptions)
            {
                <tr>
                    <td>@productOption.ProductOptionName</td>
                    <td>@productOption.Amount</td>
                    <td>@productOption.ProductOptionPriceGrowth</td>
                </tr>
            }
        }
    </tbody>
</table>

