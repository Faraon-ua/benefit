@model Benefit.Domain.Models.NotificationChannelType

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("CreateOrUpdate", "Notifications"))
        {
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Нове сповіщення @Model.ToString()</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">Назва</div>
                    <div class="col-md-9">
                        <input type="text" name="Name" class="col-md-8"/>
                    </div>
                </div>
                <div class="row margin-top-10">
                    <div class="col-md-3">Значення</div>
                    <div class="col-md-9">
                        <input type="hidden" name="ChannelType" value="@Model" />
                        <input type="@Model.ToString()" name="Address" class="col-md-8" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success">Зберегти</button>
            </div>
        }
    </div>
</div>


