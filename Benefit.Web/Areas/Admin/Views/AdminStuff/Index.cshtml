@using Benefit.Services
@{
    ViewBag.Title = "VIP функції";
}

<fieldset>
    <legend>
        SEO
    </legend>
    <a class="btn btn-info" href="@Url.Action("GenerateSitemap", "AdminStuff")">Згенерувати sitemap.xml</a>
</fieldset>
<fieldset>
    <legend>
        Запустити імпорт
    </legend>
    <a class="btn btn-info" href="@Url.Action("ProcessImportTasks", "Schedule", new {key = SettingsService.ScheduleKey, area = string.Empty})">Імпорт</a>
</fieldset>
<fieldset>
    <legend>
        Очистити кеш категорій
    </legend>
    <a class="btn btn-info" href="@Url.Action("ClearCategoriesCache", "AdminStuff")">Очистити кеш</a>
</fieldset>
<fieldset>
    <legend>
        Згенерувати рекомендовані та нові товари
    </legend>
    <a class="btn btn-info" target="_blank" href="@string.Format("{0}/Schedule/FetchFeaturedProducts?key={1}", SettingsService.BaseApiHostName, SettingsService.ScheduleKey)">Згенерувати</a>
</fieldset>
<fieldset>
    <legend>
        Синхронізувати замовлення з Розетка
    </legend>
    <a class="btn btn-info" target="_blank" href="@string.Format("{0}/Schedule/ProcessMarketplaceOrders?key={1}", SettingsService.BaseApiHostName, SettingsService.ScheduleKey)">Синхронізувати</a>
</fieldset>
