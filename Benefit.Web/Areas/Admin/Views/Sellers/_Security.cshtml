@using Benefit.Common.Helpers
@using Benefit.Domain.Models.Enums
@model Benefit.Web.Models.Admin.SellerViewModel

<fieldset>
    <legend>Безпека</legend>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="Seller_RepeatingTransactionInterval">Інтервал підсвітки транзакцій, що повторюються (год)</label>
            <div class="col-xs-10 col-sm-5">
                @Html.TextBoxFor(m => m.Seller.RepeatingTransactionInterval, new { type = "number" })
            </div>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>Коефіцієнт винагороди за запрошення</legend>
    <div class="margin-left-10">
        @for (var i=0; i<Model.Seller.BusinessLevelIndexes.Count;i++)
        {
            <div class="row">
                <div class="col-md-3">@Enumerations.GetEnumDescription((BusinessLevel)i)</div>
                @Html.Hidden(string.Format("Seller.BusinessLevelIndexes[{0}].SellerId", i), Model.Seller.Id, new { @class = "col-sm-2" })
                @Html.Hidden(string.Format("Seller.BusinessLevelIndexes[{0}].BusinessLevel", i), i, new { @class = "col-sm-2" })
                @Html.TextBox(string.Format("Seller.BusinessLevelIndexes[{0}].Index", i), Model.Seller.BusinessLevelIndexes.ElementAt(i).Index, new { @class = "col-sm-1 number-input" })
            </div>    
        }
        <div id="belongCategories"></div>
    </div>
</fieldset>

