@using Benefit.Common.Constants
@using Benefit.Domain.Models
@using Benefit.Domain.Models.ModelExtensions
@model IEnumerable<Product>
@if (!Model.Any())
{
    <div>Пошук не дав жодних результатів</div>
}
else
{
    <div class="table-responsive" id="products-table">
        <table class="table table-striped table-bordered table-hover" id="sample-table-1">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        Код товару
                    </th>
                    <th>
                        Назва
                    </th>

                    <th>
                        Категорія
                    </th>
                    <th>
                        Назва постачальника
                    </th>
                    <th>
                        Наявність
                    </th>
                    <th>
                        Ваговий
                    </th>
                    <th>
                        Ціна
                    </th>
                    <th>
                        Експорти
                    </th>
                    <th>
                        Дії
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr id="tr-@product.Id">
                        <td>
                            <input type="checkbox" class="product-select" data-product-id="@product.Id" />
                        </td>
                        <td>
                            @product.SKU
                        </td>
                        <td>
                            @Html.ActionLink(product.Name, "CreateOrUpdate", new { id = product.Id }, new { target = "_blank" })
                        </td>

                        <td>
                            @product.Category.Name
                        </td>
                        <td>
                            @Html.ActionLink(product.Seller.Name, "CreateOrUpdate", "Sellers", new { id = product.Seller.Id }, null)
                        </td>
                        <td>
                            @if (product.AvailabilityState == ProductAvailabilityState.AlwaysAvailable
                                 || (product.AvailabilityState == ProductAvailabilityState.Available && product.AvailableAmount == null)
                                 || product.AvailabilityState == ProductAvailabilityState.OnDemand)
                            {
                                <div class="icon-check-sign green"></div>
                            }
                            else if (product.AvailableAmount == 0 || product.AvailabilityState == ProductAvailabilityState.NotInStock)
                            {
                                <div class="icon-ban-circle red"></div>
                            }
                            else
                            {
                                @product.AvailableAmount
                            }
                        </td>
                        <td>
                            <input type="checkbox" class="weight-product" @(product.IsWeightProduct ? "checked" : "") data-product-id="@product.Id" />
                        </td>
                        <td>
                            @product.Price
                        </td>
                        <td>
                            @if (product.ExportProducts.Any())
                            {
                                <span>@string.Join("<br />", product.ExportProducts.Select(entry => entry.Export.Name))</span>
                            }
                            <a href="#" data-product-id="@product.Id" class="remove-export">
                                <i class="icon icon-remove red"></i>
                            </a>
                        </td>
                        <td>
                            <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                                <a class="btn btn-xs btn-info" href="@Url.RouteUrl(RouteConstants.ProductRouteName, new {productUrl = string.Format("{0}-{1}", product.UrlName, product.SKU)})" target="_blank">
                                    <i class="icon-eye-open bigger-120"></i>
                                </a>
                                @{
                                    var lockClassName = product.IsActive ? "unlock" : "lock";
                                }
                                <a class="btn btn-xs btn-warning" onclick="LockUnlock('@product.Id');">
                                    <i class="lockUser-@product.Id icon-@lockClassName bigger-120"></i>
                                </a>

                                <a class="btn btn-xs btn-danger" onclick="DeleteProduct('@product.Id', '@product.Name.Sanitize()');">
                                    <i class="icon-trash bigger-120"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
