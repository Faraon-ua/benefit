@model  Benefit.Web.Models.ViewModels.HierarchySelectViewModel
<div class="btn-group hierarchy-select" data-resize="auto" id="@Model.Name">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="selected-label pull-left">&nbsp;</span>
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu open">
        <div class="hs-searchbox">
            <input type="text" class="form-control" autocomplete="off">
        </div>
        <ul class="dropdown-menu inner" role="menu">
            @foreach (var option in Model.Items)
            {
                <li data-value="@option.Value" data-level="@option.Level" @(option.Value == Model.Value ? "data-default-selected":"")>
                    <a href="#">@option.Text</a>
                </li>
            }
        </ul>
    </div>
    <input class="hidden hidden-field" name="@Model.Name" readonly="readonly" aria-hidden="true" type="text" />
</div>