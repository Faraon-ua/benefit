@model Benefit.Domain.Models.ProductOption
<div id="dialog" title="Додати опцію" class="hide">
    <div class="ui-dialog-content ui-widget-content" id="dialog-confirm" style="width: 400px; min-height: 27px; max-height: none; height: auto;">
        @using (Html.BeginForm("CreateOrUpdate", "ProductOptions", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <label class="control-label col-sm-6">Назва опції</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "col-sm-6" })
            <br />
            <label class="control-label col-sm-6">Збільшення вартості</label>
            @Html.EditorFor(m => m.PriceGrowth, new { @class = "col-sm-6" })
            <br />
            <div class="col-sm-12">
                @Html.CheckBoxFor(m => m.EditableAmount)
                @Html.LabelFor(m => m.EditableAmount, "Можливо замовити декілька", new { @class = "control-label" })
            </div>
            if (Model.ProductId != null)
            {
            <div class="col-sm-12">
                <div class="padding-10">
                    @Html.LabelFor(m => m.Image, "Зображення", new { @class = "control-label" })
                    <input type="file" name="image"/>
                </div>
            </div>
            }
            @Html.HiddenFor(m => m.ParentProductOptionId)
            @Html.HiddenFor(m => m.CategoryId)
            @Html.HiddenFor(m => m.SellerId)
            @Html.HiddenFor(m => m.ProductId)
        }
    </div>
</div>
