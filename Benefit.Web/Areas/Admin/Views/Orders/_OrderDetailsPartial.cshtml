@using Benefit.Common.Extensions
@using Benefit.Common.Helpers
@using Benefit.Domain.Models
@model Order
<p class="history_modal_title">Інформація про замовлення</p>

<table class="width-100 order_ifo_table">
    <tr>
        <td>
            Імя покупця
        </td>
        <td>
            @Model.User.FullName
        </td>
    </tr>
    <tr>
        <td>
            № замовлення
        </td>
        <td>
            @Model.OrderNumber
        </td>
    </tr>
    <tr>
        <td>
            Час
        </td>
        <td>
            @Model.Time.ToLocalDateTimeWithFormat()
        </td>
    </tr>
    <tr>
        <td>
            Номер телефону
        </td>
        <td>
            @Model.User.PhoneNumber
        </td>
    </tr>
    <tr class="bg-grey height-30px"><td></td><td></td></tr>
    <tr>
        <td>
            Спосіб оплати
        </td>
        <td>
            @Enumerations.GetEnumDescription(Model.PaymentType)
        </td>
    </tr>
    @if (Model.PaymentType == PaymentType.Bonuses)
    {
        <tr>
            <td>
                Сплачено бонусами
            </td>
            <td>
                @Math.Abs(Model.BonusPaymentTransaction.Bonuses).ToString("F")
            </td>
        </tr>
        <tr>
            <td>
                Доплата
            </td>
            <td>
                @((Model.Sum - Math.Abs(Model.BonusPaymentTransaction.Bonuses)).ToString("F"))
            </td>
        </tr>
    }
    <tr>
        <td>
            Бали
        </td>
        <td>
            @Model.PointsSum
        </td>
    </tr>
    <tr>
        <td>
            Бонуси
        </td>
        <td>
            @Model.PersonalBonusesSum
        </td>
    </tr>
    <tr class="bg-grey height-30px"><td></td><td></td></tr>
    <tr>
        <td>
            Спосіб доставки
        </td>
        <td>
            @Model.ShippingName
        </td>
    </tr>
    <tr>
        <td>
            Адреса доставки
        </td>
        <td>
            @Model.ShippingAddress
        </td>
    </tr>
    <tr>
        <td>
            Вартість доставки
        </td>
        <td>
            @Model.ShippingCost
        </td>
    </tr>
    <tr class="bg-grey height-30px"><td></td><td></td></tr>
    <tr>
        <td>
            Коментар
        </td>
        <td>
            @Model.Description
        </td>
    </tr>
    <tr class="bg-grey height-30px"><td></td><td></td></tr>
    <tr>
        <td>
            Статус
        </td>
        <td>
            @if (Model.Status == OrderStatus.Created || Model.Status == OrderStatus.Processed)
            {
                @Html.DropDownList("OrderStatus", EnumHelper.GetSelectList(typeof(OrderStatus), Model.Status))
            }
            else
            {
                @Enumerations.GetEnumDescription(Model.Status)
            }
        </td>
    </tr> 
    <tr>
        <td>
            Коментар статусу
        </td>
        <td>
            @if (Model.Status == OrderStatus.Created || Model.Status == OrderStatus.Processed)
            {
                 @Html.TextBox("StatusComment", Model.StatusComment, new { @class = "width-100" })
            }
            else
            {
                @Model.StatusComment
            }
        </td>
    </tr>
</table>

@if (Model.Status == OrderStatus.Created || Model.Status == OrderStatus.Processed)
{
    <p>
        <a class="btn btn-primary margin-right-10  btn-sm" href="#" title="Зберегти статус" id="updateStatus">Зберегти статус</a>
    </p>
}

<p class="history_modal_title">Товари в кошику</p>
<table class="order_in_table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Кількість</th>
            <th>Ціна</th>
            <th>Сума</th>
            <th></th>
        </tr>
    </thead>
    <tbody style="max-height:none; overflow-y: auto;">
        @foreach (var product in Model.OrderProducts)
        {
            var productOptionsSum = product.DbOrderProductOptions.Sum(entry => entry.ProductOptionPriceGrowth * entry.Amount);
            var productSum = product.ProductPrice * product.Amount;
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @if (Model.Status == OrderStatus.Processed)
                    {
                        <input type="text" class="number-input product-amount col-sm-12" value="@product.Amount" />
                    }
                    else
                    {
                        @product.Amount
                    }
                </td>
                <td>
                    @if (Model.Status == OrderStatus.Processed)
                    {
                        <input type="text" class="number-input product-price col-md-12" value="@product.ProductPrice" />
                    }
                    else
                    {
                        @product.ProductPrice
                    }
                </td>
                <td>@((productSum + productOptionsSum).ToString("F"))</td>
                <td>
                    @if (Model.Status == OrderStatus.Processed)
                    {
                        <a class="btn btn-success update-product" href="#" data-product-id="@product.ProductId">
                            <i class="icon-refresh"></i>
                        </a>
                        <a class="btn btn-danger" href="@Url.Action("DeleteOrderProduct", new {orderId = Model.Id, productId = product.ProductId})" onclick=" return confirm('Ви впевненні?') ">
                            <i class="icon-trash"></i>
                        </a>
                    }
                </td>
            </tr>
            foreach (var productOption in product.DbOrderProductOptions)
            {
                <tr>
                    <td>@productOption.ProductOptionName</td>
                    <td>
                        @if (Model.Status == OrderStatus.Processed)
                        {
                            <input type="text" class="number-input product-amount col-sm-12" value="@productOption.Amount" />
                        }
                        else
                        {
                            @productOption.Amount
                        }
                    </td>

                    <td>
                        @if (Model.Status == OrderStatus.Processed)
                        {
                            <input type="text" class="number-input product-price col-md-12" value="@productOption.ProductOptionPriceGrowth" />
                        }
                        else
                        {
                            @productOption.ProductOptionPriceGrowth
                        }
                    </td>
                    @if (Model.Status == OrderStatus.Processed)
                    {
                        <td></td>
                        <td>
                            <a class="btn btn-success update-product-option" href="#" data-product-option-id="@productOption.ProductOptionId" data-product-id="@product.ProductId">
                                <i class="icon-refresh"></i>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("DeleteOrderProductOption", new { orderId = Model.Id, productId = product.ProductId, productOptionId = productOption.ProductOptionId })" onclick=" return confirm('Ви впевненні?') ">
                                <i class="icon-trash"></i>
                            </a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
@if (Model.Status == OrderStatus.Processed)
{
    <p>
        <a class="btn btn-primary margin-right-10 pull-left btn-sm" href="#" title="Додати товар" onclick=" LoadOrderProductForm()">Додати товар</a>
    </p>
}

<div class="width-100">
    <div class="centered width-20 row">
        <div class="col-md-8">
            <b>
                Загальна сума замовлення
            </b>
        </div>
        <div class="col-md-4">@Model.Sum</div>
    </div>
    <div class="centered width-20 row">
        <div class="col-md-8">
            <b>
                Доставка
            </b>
        </div>
        <div class="col-md-4">@Model.ShippingCost</div>
    </div>
    <div class="centered width-20 row">
        <div class="col-md-8">
            <b>
                Всього
            </b>
        </div>
        <div class="col-md-4">@(Model.Sum + Model.ShippingCost)</div>
    </div>
</div>

<button class="btn btn-warning" onclick="window.open('@Url.Action("Print", new { id = Model.Id })')">
    <i class="icon-print bigger-160"></i>
    Роздрукувати
</button>

