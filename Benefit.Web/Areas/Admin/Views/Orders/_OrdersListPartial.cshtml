@using Benefit.Common.Extensions
@model IEnumerable<Benefit.Domain.Models.Order>

<table class="table">
    <tr>
        <th>
            Номер
        </th>
        <th>
            Постачальник
        </th>
        <th>
            Партнер
        </th>
        <th>
            Сума
        </th>
        <th>
            Час
        </th>
        <th>
            Тип
        </th>
        <th>
            Статус
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                @item.Time.ToLocalTimeWithFormat()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) |
                @Html.ActionLink("Видалити", "Delete", new { id = item.Id }, new { onclick = "return confirm('Ви впевненні?')" })
            </td>
        </tr>
    }
</table>
