@using Benefit.Common.Extensions
@using Benefit.Common.Helpers
@model  Benefit.DataTransfer.ViewModels.PaginatedList<Benefit.Domain.Models.Order>

<ul class="pagination">
    @for (int i = 0; i < Model.Pages; i++)
    {
        <li class="@(i == Model.ActivePage ? "active" : "" )">
            <a href="#">@i</a>
        </li>
    }
</ul>
<table class="table">
    <tr>
        <th>
            Номер
        </th>
        <th>
            Постачальник
        </th>
        <th>
            Касир
        </th>
        <th>
            Партнер
        </th>
        <th>
            Сума
        </th>
        <th>
            Час
        </th>
        <th>
            Статус
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonnelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                @item.Time.ToLocalTimeWithFormat()
            </td>
            <td>
                @Enumerations.GetEnumDescription(item.Status)
            </td>
            <td>
                @Html.ActionLink("Детальніше", "Details", new { id = item.Id }) 
@*                @Html.ActionLink("Видалити", "Delete", new { id = item.Id }, new { onclick = "return confirm('Ви впевненні?')" })*@
            </td>
        </tr>
    }
</table>
<ul class="pagination">
    @for (int i = 0; i < Model.Pages; i++)
    {
        <li class="@(i == Model.ActivePage ? "active" : "" )">
            <a href="#">@i</a>
        </li>
    }
</ul>
