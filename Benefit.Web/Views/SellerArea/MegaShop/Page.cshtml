@using Benefit.DataTransfer.ViewModels
@using Benefit.Domain.Models
@model InfoPage
@{
    ViewBag.Title = Model.Name;
    Layout = "_SellerLayout.cshtml";
    var seller = ViewBag.Seller as Seller;
}
@section meta{
    <meta name="description" content="@Model.ShortContent">
}
<div class="col-md-8 col-xl-9 content">
    @Html.Partial("~/views/sellerarea/Megashop/_BreadcrumbsPartial.cshtml", new BreadCrumbsViewModel() { Page = new InfoPage() { Name = Model.Name } })

    <div class="fn_ajax_content margin-top-10">
        <div class="block">
            <h1 class="h1">
                <span data-page="3">@Model.Name</span>
            </h1>
            <div class="padding">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>
