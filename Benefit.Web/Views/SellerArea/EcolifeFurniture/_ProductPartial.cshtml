@using Benefit.Common.Constants
@using Benefit.Domain.Models
@using Benefit.Services.Domain

@model Product
@{
    var productDetailsUrl = Url.RouteUrl(RouteConstants.ProductRouteName, new { productUrl = string.Format("{0}-{1}", Model.UrlName, Model.SKU) });
    var isFavorites = ViewBag.IsFavorites as bool?;
    var className = "col-xl-3 col-md-4 col-lg-4 col-sm-4 col-xs-12";
    if (Model.IsFeatured)
    {
        className = "col-xl-2-5 col-md-4 col-lg-4 col-sm-4 col-xs-12";
    }
    if (Model.IsNewProduct || Model.IsPromotion)
    {
        className = "col-xs-12";
    }
}

<div class="@className products_item product-item">
    <article class="list-product">
        <div class="img-block">
            <a href="@productDetailsUrl" class="thumbnail">
                @if (Model.DefaultImage == null)
                {
                    <img class="first-img width-100" src="~/Images/ProductGallery/default_product_thumbnail.png" alt="@Model.Title" title="@Model.Title">
                }
                else
                {
                    if (Model.DefaultImage.IsAbsoluteUrl)
                    {
                        <img class="first-img width-100" src="@Model.DefaultImage.ImageUrl" alt="Фото @Model.Name" title="Купить @Model.Name" />
                    }
                    else
                    {
                        <img class="first-img width-100" src="~/Images/ProductGallery/@Model.Id/@Model.DefaultImage.ImageUrl" alt="Фото @Model.Name" title="Купить @Model.Name" />
                    }
                }
            </a>
            @*<div class="quick-view">
                    <a class="quick_view" href="#" data-link-action="quickview" title="Quick view" data-toggle="modal" data-target="#exampleModal">
                        <i class="ion-ios-search-strong"></i>
                    </a>
                </div>*@
        </div>
        @*<ul class="product-flag">
                <li class="new">New</li>
            </ul>*@
        <div class="product-decs">
            @*<a class="inner-link" href="shop-4-column.html"><span>STUDIO DESIGN</span></a>*@
            <h2><a href="@productDetailsUrl" class="product-link">@Model.Name</a></h2>
            @*<div class="rating-product">
                    <i class="ion-android-star"></i>
                    <i class="ion-android-star"></i>
                    <i class="ion-android-star"></i>
                    <i class="ion-android-star"></i>
                    <i class="ion-android-star"></i>
                </div>*@
            <div class="pricing-meta">
                <ul>
                    @if (Model.OldPrice.HasValue)
                    {
                        <li class="old-price fn_old_price">@Model.OldPrice.Value.ToString("F") грн</li>
                    }
                    <li class="current-price fn_price">@Model.Price.ToString("F")<span> грн/@(@Model.IsWeightProduct ? "кг" : "шт")</span></li>
                    @if (Model.OldPrice.HasValue)
                    {
                        var perc = (int)(100 - Model.Price * 100 / Model.OldPrice.Value);
                        <li class="discount-price">-@perc%</li>
                    }
                </ul>
            </div>
        </div>
        <div class="add-to-link">
            <ul>
                <li class="cart flex-grow-2"><a class="cart-btn" href="#"><i class="ion-android-cart"></i> В кошик</a></li>
                <li class="flex-grow-1">
                    <a href="wishlist.html"><i class="ion-android-favorite-outline"></i></a>
                </li>
                <li class="flex-grow-1">
                    <a href="compare.html"><i class="ion-ios-shuffle-strong"></i></a>
                </li>
            </ul>
        </div>
    </article>
</div>

