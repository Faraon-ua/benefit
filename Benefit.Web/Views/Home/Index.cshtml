    <script>
        var productOptionsUrl = '@Url.Action("GetProductOptions", "Tovar")';
        var addToCartUrl = '@Url.Action("AddProduct", "Cart")';
        var checkSellerCartUrl = '@Url.Action("CheckSeller", "Cart")';
    </script>
    <script src="~/Scripts/v3/products.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script>
        $(function () {
            $('.slider').owlCarousel({
                loop: true,
                margin: 0,
                dots: true,
                responsiveClass: true,
                nav: true,
                navText: [
                    '<a class="banner-nav" href="#"><i class="fa fa-angle-left"></i></a>',
                    '<a class="banner-nav" href="#"><i class="fa fa-angle-right"></i></a>'
                ],
                items: 1,
                autoplay: true,
                autoplayTimeout: 7000,
                startPosition: '0',
                fluidSpeed: true,
                smartSpeed: 1000
            });

            $(".section-menu").hover(function () {
                $("#bg").css("background", "rgba(0, 0, 0, 0.3)");
                $("#bg").css("z-index", "100");
            }, function () {
                $("#bg").css("background", "rgba(0, 0, 0, 0)");
                $("#bg").css("z-index", "-1");
            });
        })
    </script>
}
