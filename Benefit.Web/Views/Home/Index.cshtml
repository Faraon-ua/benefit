                color: #fff;
            }

        .slider .owl-dots .owl-dot span {
            width: 18px;
            height: 18px;
            background: #fff;
            border: 1px solid #cdcbca;
            box-sizing: border-box;
        }

        .slider .owl-dots .owl-dot.active span, .slider .owl-dots .owl-dot:hover span {
