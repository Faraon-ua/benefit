            border-color: #990000;
        }

        .slider .owl-dots {
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
    </style>
    <link href="~/Content/css/owl.carousel.css" rel="stylesheet" />
}

