        <div class="container">
            <div class="row">
                <form action="" method="post">
                    <h2>Регистрация</h2>
                    <div class="reg-form-content">
                        <div class="reg-form-step">
                            <input name="tracking" type="text" placeholder="Введите реферальний код">
                        </div>
                        <div class="reg-form-step">
                            <input name="city" type="text" placeholder="Ваш город">
                        </div>
                        <div class="reg-form-step">
                            <input name="firstname" type="text" placeholder="Ваше имя">
                        </div>
                        <div class="reg-form-step">
                            <input name="lastname" type="text" placeholder="Ваша фамилия">
                        </div>
                        <div class="reg-form-step">
                            <input name="email" type="text" placeholder="E-mail">
                        </div>
                        <div class="reg-form-step">
                            <input name="telephone" type="tel" placeholder="Телефон">
                        </div>
                        <div class="reg-form-step">
                            <input name="fax" type="text" placeholder="Номер карты (при наличии)">
