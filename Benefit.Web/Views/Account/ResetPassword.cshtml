@model Benefit.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<div class="page-top maxwidth-theme">

    <form method="post" class="form-horizontal" role="form">
        @Html.AntiForgeryToken()
        <h4>Встановити новий пароль</h4>
        <hr />
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Code)
        <div class="form-group">
            <label class="col-md-2 control-label">Пароль</label>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control width-20" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Повторіть пароль</label>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control width-20" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Зберегти" />
            </div>
        </div>
    </form>
</div>
