            <a href="http://meta.ua/" target="_blank" class="ml_meta"></a>
        </div>
    </div>
    <!-- modal -->
    <div id="modal-affiliate-info" class="modal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <!-- Заголовок модального окна -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <!-- Основной текст сообщения -->
                <div class="modal-body cabin2-wrapper">
                    <div class="lr_modal_text">
                        Спасибо!
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="//www.youtube.com/player_api"></script>
    <script type="text/javascript">

        var player;
        var time;
        function onYouTubePlayerAPIReady() {
            player = new YT.Player('player', {
                height: '390',
                width: '640',
                videoId: 'edoSmTEWMg4',
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }
        // autoplay video
        function onPlayerReady(event) {
            event.target.playVideo();
            setInterval(function () {
                time = event.target.getCurrentTime();
                if (time >= 5) {
                    $('#step_start').fadeOut('fast', function () {
                        $('#step_end').fadeIn('fast');
                    });
                }
            }, 1000);
        }
        // when video ends
        function onPlayerStateChange(event) {
            if (event.data === 0) {
                //alert('done');
            }
        }

        $(document).ready(function () {

            $('#comfirmButton').click(function (event) {
                event.preventDefault;

                var remail = $('[name=email]');

                if (remail.val() == '') {
                    remail.addClass('empty-input');
                } else {
                    var emval = remail.val();
                    var mailformat = /^\w+([\.-]?\w+)*\w+([\.-]?\w+)*(\.\w{2,3})+$/;
                    if (emval.match(mailformat)) {
                        remail.removeClass('empty-input');
                        $('.modal').css({ 'display': 'block', 'background': 'rgba(0, 0, 0, 0.66)' });
                    } else {
                        remail.addClass('empty-input');
                    }
                }

            });
            $('.modal-header .close').click(function () {
                $('.modal').attr('style', '');
            })

        });
    </script>
