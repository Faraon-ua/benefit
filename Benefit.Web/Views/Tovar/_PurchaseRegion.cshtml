@model string

<div class="modal purchase-region" tabindex="-1" role="dialog" style="text-align: center;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border: none;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="font-size: 2em;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    Товар можна купити тільки в <span class="purchase-region-container">@Model</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary select_place_container" data-dismiss="modal">Вибрати місто</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
            </div>
        </div>
    </div>
</div>