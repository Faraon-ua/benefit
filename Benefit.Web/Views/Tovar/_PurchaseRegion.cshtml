@model Dictionary<string,string>
@{
    var regionNames = string.Join(",", Model.Values);
    var regionId = Model.Keys.Count == 0 ? "0" : Model.FirstOrDefault().Key;
}
<div class="modal purchase-region" tabindex="-1" role="dialog" style="text-align: center; z-index: 9999;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border: none;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="font-size: 2em;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="font-size: 2em; text-align: center; line-height: 1.5em;">
                    Замовлення приймаються тільки по м. <span class="purchase-region-container">@regionNames</span>
                </div>
            </div>
            <div class="modal-footer predefinedRegions" style="text-align: center">
                <a class="btn btn-default auto-select-region width-30" data-dismiss="modal" data-region-id="@regionId" data-region-name="@regionNames">Ok</a>
            </div>
        </div>
    </div>
</div>