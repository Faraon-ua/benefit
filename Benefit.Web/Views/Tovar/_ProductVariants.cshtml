@model Benefit.Domain.Models.Product

<div class="modal variants" tabindex="-1" role="dialog" style="text-align: center;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border: none;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="font-size: 2em;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="variants">
                    @foreach (var group in Model.ProductOptions)
                    {
                        <div>
                            <p class="validation alert alert-warning" style="display: none;">
                                Будь ласка оберіть @group.Name
                            </p>
                            <div class="row">
                                <div class="col-sm-2 title">@group.Name:</div>
                                <div class="col-sm-10">
                                    @foreach (var option in group.ChildProductOptions.OrderBy(entry => entry.Order))
                                    {
                                        <div class="variant-item" data-option-name="@option.Name" data-option-title="@group.Name" data-price-growth="@option.PriceGrowth">
                                            @option.Name
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="buy-product-with-variants" data-product-id="@Model.Id" data-seller-id="@Model.SellerId">Додати до кошика</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрити</button>
            </div>
        </div>
    </div>
</div>