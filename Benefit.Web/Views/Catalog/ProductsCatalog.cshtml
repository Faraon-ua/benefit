                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="left_block">
            @if (Model.ProductParameters.Any() || Model.Seller != null)
            {
                @Html.Partial("~/Views/Catalog/_ProductFilters.cshtml", Model.ProductParameters)
            }
        </div>
    </div>
