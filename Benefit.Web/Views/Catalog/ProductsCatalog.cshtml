                                    <i class="fa fa-filter black"></i>
                                    <span>Фільтри та сортування</span>
                                </a>
                            </div>

                            @if (Model.Category != null && string.IsNullOrEmpty(Request.RequestContext.RoteValue("options")))
                            {
