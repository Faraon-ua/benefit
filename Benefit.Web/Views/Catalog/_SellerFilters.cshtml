@using (Html.BeginForm("Index", "Catalog", FormMethod.Get))
{
    <fieldset>
        <legend>Спеціалізація</legend>
        @foreach (var child in Model.Category.ChildCategories)
        {
            var nameWithSellersCount = string.Format("{0} ({1})", child.Name, Model.Items.Count(entry => entry.SellerCategories.Select(sc => sc.CategoryId).Contains(child.Id)));
            <input class="hidden" type="checkbox" name="subCategories" id="subcategory-@child.Id" value="@child.Id" />
            <label class="label_for_check" for="subcategory-@child.Id">@nameWithSellersCount</label>
        }
    </fieldset>
    
    <fieldset>
        <legend>Критерії</legend>
        <input class="hidden" type="checkbox" name="sellerOptions" value="BenefitCard" id="BenefitCard">
        <label class="label_for_check" for="BenefitCard">Benefit Card</label>

        <input class="hidden" type="checkbox" name="sellerOptions" value="FreeShipping" id="FreeShipping">
        <label class="label_for_check" for="FreeShipping">Безкоштовна доставка</label>

        <input class="hidden" type="checkbox" name="sellerOptions" value="BankCard" id="BankCard">
        <label class="label_for_check" for="BankCard">Оплата карткою</label>

        <input class="hidden" type="checkbox" name="sellerOptions" value="BonusPayment" id="BonusPayment">
        <label class="label_for_check" for="BonusPayment">Оплата бонусами</label>
    </fieldset>

