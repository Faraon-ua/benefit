                                <li class="menu_title">Каталог товаров</li>
                                @foreach (var cat in categories)
                                {
                                    <li>
                                        <a class="dark-color @(cat.ChildCategories.Any()? "parent" : string.Empty)" href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = cat.UrlName })" title="@cat.Name">
                                            <span>@cat.Name</span>
                                            @if (cat.ChildCategories.Any())
                                            {
                                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                                            }
                                        </a>
