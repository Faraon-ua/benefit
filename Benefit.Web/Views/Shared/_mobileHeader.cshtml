@using Benefit.Common.Constants
@using Benefit.Domain.Models

@{
    var categories = ViewBag.Categories as List<Category>;
}
<div id="mobileheader" class="visible-xs visible-sm" style="position: fixed; width: 100%">
    <div class="mobileheader-v1">
        <div class="burger pull-left">
            <i class="svg svg-burger mask"></i>
            <i class="svg svg-close black"></i>
        </div>
        <div class="logo-block pull-left">
            <div class="logo">
                <a href="#"><img src="~/Content/img/logo.png" alt="Benefit Company" title="Benefit Company"></a>
            </div>
        </div>
        <div class="right-icons pull-right">

            <div class="pull-right">
                <div class="wrap_icon wrap_basket">
                    <!--'start_frame_cache_header-basket-with-compare-block3'-->
                    @*<a class="basket-link compare lg " href="#" title="Список сравниваемых элементов">
                            <span class="js-basket-block">
                                <i class="svg svg-compare " aria-hidden="true"></i>
                                <span class="title dark_link">Сравнение</span><span class="count">0</span>
                            </span>
                        </a>
                        <a rel="nofollow" class="basket-link delay  lg " href="#" title="Список отложенных товаров пуст">
                            <span class="js-basket-block">
                                <i class="svg svg-wish" aria-hidden="true"></i>
                                <span class="title dark_link">Отложенные</span>
                                <span class="count">0</span>
                            </span>
                        </a>*@

                    <a rel="nofollow" class="basket-link basket   lg " href="#" title="Корзина пуста">
                        <span class="js-basket-block">
                            <i class="svg svg-basket" aria-hidden="true"></i>
                            <span class="title dark_link">Корзина</span>
                            <span class="count cart-items-number">0</span>
                        </span>
                    </a>


                    <!--'end_frame_cache_header-basket-with-compare-block3'-->
                </div>
            </div>

            <div class="pull-right">
                <div class="wrap_icon">
                    <button class="top-btn inline-search-show twosmallfont">
                        <i class="svg svg-search lg" aria-hidden="true"></i>
                    </button>
                </div>
            </div>

            <div class="pull-right">
                <div class="wrap_icon">
                    <a rel="nofollow" title="особистий кабінет" class="personal-link dark-color " href="@Url.Action("Index", "Panel", routeValues: new { area = DomainConstants.CabinetAreaName })">
                        <i class="svg svg-cabinet lg" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="mobilemenu" class="dropdown">
        <div class="mobilemenu-v2 downdrop scroller">
            <div class="wrap">
                <div class="menu top">
                    <ul class="top">
                        <li>
                            <a class="dark-color parent" href="#" title="Каталог">
                                <span>Каталог товарів та послуг</span>
                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                            </a>
                            <ul class="dropdown">
                                <li class="menu_back"><a href="" class="dark-color" rel="nofollow"><i class="svg svg-arrow-right"></i>Назад</a></li>
                                <li class="menu_title">Каталог товаров</li>
                                @foreach (var cat in categories)
                                {
                                    <li>
                                        <a class="dark-color parent" href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = cat.UrlName })" title="@cat.Name">
                                            <span>@cat.Name</span>
                                            @if (cat.ChildCategories.Any())
                                            {
                                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                                            }
                                        </a>
                                        @if (cat.ChildCategories.Any())
                                        {
                                            <ul class="dropdown">
                                                <li class="menu_back">
                                                    <a href="" class="dark-color" rel="nofollow">
                                                        <i class="svg svg-arrow-right"></i>Назад
                                                    </a>
                                                </li>
                                                <li class="menu_title">@cat.Name</li>
                                                @foreach (var subCat in cat.ChildCategories)
                                                {
                                                    <li>
                                                        <a class="dark-color parent" href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = subCat.UrlName })" title="@subCat.Name">
                                                            <span>@subCat.Name</span>
                                                            @if (subCat.ChildCategories.Any())
                                                            {
                                                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                                                            }
                                                        </a>
                                                        @if (subCat.ChildCategories.Any())
                                                        {
                                                            <ul class="dropdown">
                                                                <li class="menu_back"><a href="" class="dark-color" rel="nofollow"><i class="svg svg-arrow-right"></i>Назад</a></li>
                                                                <li class="menu_title">@subCat.Name</li>
                                                                @foreach (var childCat in subCat.ChildCategories)
                                                                {
                                                                    <li>
                                                                        <a class="dark-color" href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = childCat.UrlName })" title="@childCat.Name">
                                                                            <span>@childCat.Name</span>
                                                                        </a>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        }

                                    </li>
                                }
                            </ul>
                        </li>
                        <li>
                            <a class="dark-color parent" href="#" title="">
                                <span>Каталог постачальників</span>
                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                            </a>
                            <ul class="dropdown">
                                @foreach (var cat in categories)
                                {
                                    <li>
                                        <a class="dark-color" href="@HttpUtility.UrlDecode(Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = cat.UrlName, options="nav=sellers;/" }))" title="@cat.Name">
                                            <span>@cat.Name</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li>
                            <a class="dark-color" href="@Url.RouteUrl("pagesRoute", new {id = "partnerska_programa"})" title="Партнерська програма">
                                <span>Партнерська програма</span>
                            </a>
                        </li>
                        <li>
                            <a class="dark-color" href="@Url.RouteUrl("pagesRoute", new {id = "stati_postachalnikom"})" title="Співпраця">
                                <span>Співпраця</span>
                            </a>
                        </li>
                        <li>
                            <a class="dark-color" href="@Url.RouteUrl("pagesRoute", new {id = "faq"})" title="FAQ">
                                <span>FAQ</span>
                            </a>
                        </li>
                        <li>
                            <a class="dark-color" href="@Url.Action("index","news")" title="Новини">
                                <span>Новини</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!--'start_frame_cache_mobile-region-block1'--> <!-- noindex -->
                <div class="menu middle mobile_regions">
                    <ul>
                        <li class="select_place_container">
                            <a rel="nofollow" href="" class="dark-color parent">
                                <i class="svg svg-address black"></i>
                                <span class="inside"></span>
                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="menu middle">
                    <ul>
                        <li>
                            <a rel="nofollow" class="dark-color" href="@Url.Action("Index", "Panel", routeValues: new { area = DomainConstants.CabinetAreaName })"><i class="svg svg-cabinet-login"></i><span>Особистий кабінет</span></a>
                        </li>
                    </ul>
                </div>

                <div class="menu middle">
                    <ul>
                        <li>
                            <a rel="nofollow" href="" class="dark-color parent">
                                <i class="svg svg-phone"></i>
                                <span>+38 (050) 035 45 55</span>
                                <span class="arrow"><i class="svg svg_triangle_right"></i></span>
                            </a>
                            <ul class="dropdown">
                                <li class="menu_back"><a href="" class="dark-color" rel="nofollow"><i class="svg svg-arrow-right"></i>Назад</a></li>
                                <li class="menu_title">Телефони</li>
                                <li><a rel="nofollow" href="tel:+380500354555" class="dark-color">+38 (050) 035 45 55</a></li>
                                <li><a rel="nofollow" href="tel:+380630354555" class="dark-color">+38 (063) 035 45 55</a></li>
                                <li><a rel="nofollow" href="tel:+380970354555" class="dark-color">+38 (097) 035 45 55</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="contacts">
                    <div class="title">Контактная информация</div>
                    <div class="address">
                        <i class="svg svg-address"></i>
                        Челябинск, ул. Лермонтова 21, 3 этаж, офис 4
                    </div>
                </div>
                <div class="social-icons">
                    <ul>
                        <li class="facebook">
                            <a href="2" class="dark-color" target="_blank" rel="nofollow" title="Facebook">
                                <i class="svg svg-social-fb"></i>Facebook
                            </a>
                        </li>
                        <li class="twitter">
                            <a href="3" class="dark-color" target="_blank" rel="nofollow" title="Twitter">
                                <i class="svg svg-social-twitter"></i>Twitter
                            </a>
                        </li>
                        <li class="instagram">
                            <a href="4" class="dark-color" target="_blank" rel="nofollow" title="Instagram">
                                <i class="svg svg-social-instagram"></i>Instagram
                            </a>
                        </li>
                        <li class="ytb">
                            <a href="5" class="dark-color" target="_blank" rel="nofollow" title="YouTube">
                                <i class="svg svg-social-ytb"></i>YouTube
                            </a>
                        </li>
                        <li class="gplus">
                            <a href="7" class="dark-color" target="_blank" rel="nofollow" title="Google Plus">
                                <i class="svg svg-social-gplus"></i>Google Plus
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>