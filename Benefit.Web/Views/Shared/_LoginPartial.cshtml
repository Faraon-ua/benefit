@using Benefit.Common.Constants
@if (Request.IsAuthenticated)
{
    <div class="wrap_icon inner-table-block">
        <a rel="nofollow" title="Мій кабінет" class="personal-link dark-color animate-load" href="@Url.Action("index", "panel", routeValues: new { area = DomainConstants.CabinetAreaName })">
            <i class="fa fa-user" style="color: #b0b0b0; font-size: 2em;" aria-hidden="true"></i>
            <span class="wrap">
                <span class="name">Кабінет</span>
                <span class="title">@HttpUtility.UrlDecode(Request.Cookies[RouteConstants.FullNameCookieName].Value)</span>
            </span>
        </a>
    </div>
}
else
{
    <div class="wrap_icon inner-table-block">
        <a rel="nofollow" title="Мій кабінет" class="personal-link dark-color animate-load" href="@Url.Action("login", "account")?returnUrl=/Cabinet">
            <i class="fa fa-lock" style="color: #b0b0b0; font-size: 2em;" aria-hidden="true"></i>
            <span class="wrap">
                <span class="name">Увійти</span>
                <span class="title">в особистий кабінет</span>
            </span>
        </a>
    </div>
}
