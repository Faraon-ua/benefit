@using Benefit.Common.Constants
@model  IEnumerable<Benefit.Domain.Models.Category>
<div class="left_catalog">
    <div class="col-catalog-menu">
        <div class="no-select mobile-hid" id="section-menu">
            <ul class="section-menu">
                @foreach (var cat in Model)
                {
                    <li class="li-depth-1">
                        <a href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = cat.UrlName })" class="a-depth-1">
                            <div class="section-icon">
                                <img src="~/Images/CategoryLogo/@cat.ImageUrl" alt="@cat.Name" height="30">
                            </div>
                            <span>@cat.Name</span>
                        </a>
                        @if (cat.ChildCategories.Any())
                        {
                            <i class="fa fa-angle-right"></i>
                            <div class="child-menu child-menu-2 hidden">
                                <ul>
                                    @foreach (var subCat in cat.ChildCategories)
                                    {
                                        <li class="li-depth-2">
                                            <a href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = subCat.UrlName })" class="a-depth-2">
                                                <span>@subCat.Name</span>
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 185.343 185.343" style="enable-background: new 0 0 185.343 185.343;" xml:space="preserve" width="512px" height="512px">
                                                <g><g><path d="M51.707,185.343c-2.741,0-5.493-1.044-7.593-3.149c-4.194-4.194-4.194-10.981,0-15.175    l74.352-74.347L44.114,18.32c-4.194-4.194-4.194-10.987,0-15.175c4.194-4.194,10.987-4.194,15.18,0l81.934,81.934    c4.194,4.194,4.194,10.987,0,15.175l-81.934,81.939C57.201,184.293,54.454,185.343,51.707,185.343z" fill="#bababa" />

                                                </g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g></svg>
                                            </a>
                                            <span class="next-level hidden-lg hidden-md hidden-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 185.343 185.343" style="enable-background: new 0 0 185.343 185.343;" xml:space="preserve" width="512px" height="512px">
                                                <g>
                                                <g><path d="M51.707,185.343c-2.741,0-5.493-1.044-7.593-3.149c-4.194-4.194-4.194-10.981,0-15.175    l74.352-74.347L44.114,18.32c-4.194-4.194-4.194-10.987,0-15.175c4.194-4.194,10.987-4.194,15.18,0l81.934,81.934    c4.194,4.194,4.194,10.987,0,15.175l-81.934,81.939C57.201,184.293,54.454,185.343,51.707,185.343z" fill="#bababa" />

                                                </g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g><g></g></svg>
                                            </span>
                                            <div class="child-menu child-menu-3 hidden">
                                                <div style="padding: 5px; clear: both;">
                                                    @foreach (var childCat in subCat.ChildCategories)
                                                    {
                                                        <a href="@Url.RouteUrl(RouteConstants.CatalogRouteName, new { categoryUrl = childCat.UrlName })" class="pull-left child-category">
                                                            <img src="~/Images/CategoryLogo/@childCat.ImageUrl" style="width: 100%;" />
                                                            <div style="height: 50px; overflow: hidden;">
                                                                @childCat.Name
                                                            </div>
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>