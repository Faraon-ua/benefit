<header id="header" class="header-v4 header-wrapper">
    <div class="logo_and_menu-row">
        <div class="logo-row">
            <div class="maxwidth-theme">
                <div class="row">
                    <div class="logo-block pull-left">
                        <div class="logo ">
                            @{
                                var href = (RouteDataHelper.ControllerName == "home" && RouteDataHelper.ActionName == "index") ? "#" : Url.Action("Index", "Home", new { area = string.Empty }, Request.Url.Scheme);
                            }
                            <a href="@href"><img src="~/Content/img/logo.png"></a>
                        </div>
                    </div>
                    <div class="inline-block pull-left">
                        @Html.Partial("_SelectRegionPartial")
                    </div>
                    <div class="col-md-3 col-lg-3 search_wrap">
                        <div class="search-block inner-table-block">
                            <div class="search-wrapper">
                                <div id="title-search_fixed">
                                    @using (Html.BeginForm("Index", "Search", new { area = "" }, FormMethod.Get, new { id = "search-form", @class = "search" }))
                                    {
                                        <div class="search-input-div">
                                            <input class="search-input" id="search" name="term" aria-label="Пошук" placeholder="Я шукаю ..." />
                                        </div>
                                        <div class="search-button-div">
                                            <button class="btn btn-search" type="submit" name="s" value="Пошук"><i class="svg svg-search svg-black"></i></button>
                                            <span class="close-block inline-search-hide"><span class="svg svg-close close-icons"></span></span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="right-icons pull-right">
                        <div class="pull-right block-link">
                            <div class="wrap_icon inner-table-block baskets">
                                <a rel="nofollow" class="basket-link basket has_prices with_price" href="#/basket/" title="Корзина пуста">
                                    <span class="js-basket-block">
                                        <i class="svg svg-basket "></i>
                                        <span class="wrap">
                                            <span class="title dark_link">Кошик</span>
                                            <span id="cart-items-price" class="prices">порожній</span>
                                        </span>
                                        <span class="count cart-items-number">0</span>
                                    </span>
                                </a>
                            </div>
                        </div>
                        @Html.Partial("_LoginPartial")
                        <div class="pull-right">
                            <div class="wrap_icon inner-table-block">
                                <div class="phone-block">
                                    <div class="phone with_dropdown">
                                        <i class="svg svg-phone"></i>
                                        <a rel="nofollow" href="tel:+380500354555">+38 (050) 035 45 55</a>
                                        <div class="dropdown">
                                            <div class="wrap">
                                                <div class="more_phone"><a href="tel:+380630354555">+38 (063) 035 45 55</a></div>
                                                <div class="more_phone"><a href="tel:+380970354555">+38 (097) 035 45 55</a></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="menu-row middle-block bgcolored">
        <div class="maxwidth-theme">
            <div class="row">
                <div class="col-md-12">
                    <div class="menu-only">
                        <nav class="mega-menu sliced ovisible">
                            <div class="table-menu">
                                <table>
                                    <tbody>
                                        <tr>
                                            <td class="menu-item dropdown catalog ">
                                                <div class="wrap">
                                                    <a class="dropdown-toggle" href="#" style="padding-top: 10px;">
                                                        <div>КАТАЛОГ<br>ТОВАРІВ ТА ПОСЛУГ<div class="line-wrapper"><span class="line"></span></div></div>
                                                    </a>
                                                </div>
                                            </td>

                                            <td class="menu-item dropdown catalog wide_menu">
                                                <div class="wrap">
                                                    <a class="dropdown-toggle" href="#" style="padding-top: 10px;">
                                                        <div>
                                                            КАТАЛОГ<br>ПОСТАЧАЛЬНИКІВ<div class="line-wrapper"><span class="line"></span></div>
                                                        </div>
                                                    </a>
                                                    <ul class="dropdown-menu">
                                                        @foreach (var cat in categories)
                                                        {
                                                            <div class="dropdown-submenu" style="width: 20%; float: left; text-align: center; padding-bottom: 20px;">
                                                                <div class="menu_img">
                                                                    <a href="#" title="@cat.Name">
                                                                        <img src="~/Images/CategoryLogo/@cat.ImageUrl" alt="@cat.Name" title="@cat.Name">
                                                                    </a>
                                                                    <a href="#" title="Продукти харчування">Продукти харчування</a>
                                                                </div>
                                                            </div>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                            @Html.Partial("_MenuPartial")
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="line-row visible-xs"></div>
</header>