<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta name="description" content="benefit">
    <meta name="keywords" content="benefit, company">
    <meta name="format-detection" content="telephone=no">

    <title>@ViewBag.Title - Benefit</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    <link rel="icon" href="~/Content/img/fav.jpg">
</head>
<body>
    <div class="darker hidden"></div>
    <header>
        <div class="container">
            <div class="container_table topheader_content">
                <div class="col-2">
                    <a class="logo" href='@Url.Action("Index", "Home")'></a>
                    <div class="logo_slogan">Онлайн-торговый центр</div>
                </div>
                <div class="col-8">
                    <div class="menu lmenu_block" id="left-menu">
                        @Html.Partial("_MenuPartial")
                        <div class="f_soc_p">
                            <a href="#" class="yt"><i class="fa fa-youtube" aria-hidden="true"></i></a>
                            <a href="#" class="fb"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="#" class="vk"><i class="fa fa-vk" aria-hidden="true"></i></a>
                            <a href="#" class="gp"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                            <a href="#" class="tw"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href="#" class="ig"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                        </div>
                        <div class="lmenu_contact">
                            <span>Служба підтримки:</span>
                            <a href="tel:+380500354555">
                                <span>(050) 035 45 55</span>
                            </a>
                            <a href="tel:+380630354555">
                                <span>(063) 035 45 55</span>
                            </a>
                            <a href="tel:+380970354555">
                                <span>(097) 035 45 55</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <div class="top_right_selectors">
                        <div class="dropdown dropdown_inline">
                            <button class="btn btn-default dropdown-toggle" type="button" id="select_language" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <i class="icn flag ua"></i>
                                УКР
@*                                <span class="caret"></span>*@
                            </button>
                            @*//todo:add language select <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="select_language">
                                <li><a href="#"><i class="icn flag ua"></i> РУС</a></li>
                            </ul>*@
                        </div>
                        @Html.Partial("_SelectRegionPartial")
                    </div>
                    <div class="top_right_phone">
                        <div>
                            <i class="icn phone"></i>
                        </div>
                        <div>
                            <span>(050) 035 45 55</span>
                            <span>(063) 035 45 55</span>
                            <span>(097) 035 45 55</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    @Html.Partial("_ControlPanelPartial")
    <!-- overlay -->
    <div class="login_box_over hidden"></div>
    <div class="empty_over hidden"></div>
    <div class="container">
        <div class="container_table main_content clearfix">
            <aside class="left_sidebar left_sidebar_main">
                @RenderSection("LeftAside", false)
            </aside>
            <main class="col-8 full_content">
                @RenderBody()
            </main>
            <aside class="right_sidebar right_sidebar_main">
                @Html.Partial("_SocialGroups")
                <div class="mob_block">
                    <p>Завантажити додаток</p>
                    <div>
                        <a href="#"><i class="fa fa-android" aria-hidden="true"></i> Play Market</a>
                    </div>
                    <div>
                        <a href="#"><i class="fa fa-apple" aria-hidden="true"></i> App Store</a>
                    </div>
                </div><!-- mob block -->
            </aside>
        </div>
    </div>
    <footer>
        @Html.Partial("_FooterPartial")
    </footer>
    @Scripts.Render("~/bundles/master")
    @RenderSection("scripts", required: false)
    <script>
        $('#loginPartial').load('@Url.Action("LoginPartial", "Home")');
        var categoriesUrl = '@Url.Action("CategoriesPartial", "Home")';
        var categoryId = $("#Category_Id").val();
        if (categoryId) {
            categoriesUrl = categoriesUrl + "?parentCategoryId=" + categoryId;
        }
        $('#right-menu').load(categoriesUrl);

        if ($(".categories_drop").length > 0) {
            $.get('@Url.Action("CategoriesPartial", "Home")?isDropDown=true',
                function (data) {
                    $(".categories_drop").after(data);
                });
        }
    </script>
    @Html.Partial("_RegionModal")
</body>
</html>